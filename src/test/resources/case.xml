<?xml version="1.0"?>
<query xmlns="tica">
    <sql alias="cidade">select * from cidade where estado = ${estado}</sql>
    <object>
        <integer key="id"/>
        <string key="nome"/>
        <string key="estado"/>
        <string key="coordenada">funcaoStr(latitude, longitude)</string>
        <query key="cidades">
            <sql>select * from cliente where cidade_id = ${cidade.id}</sql>
            <object>
                <integer key="int">integer_field</integer>
                <decimal key="dec">decimal_field</decimal>
                <string key="str">string_field</string>
                <boolean key="boo">boolean_field</boolean>
                <datetime key="dtm">datetime_field</datetime>
            </object>
        </query>
    </object>
</query>